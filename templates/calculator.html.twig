{% extends 'base.html.twig' %}

{% block title %}Калькулятор{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Калькулятор</h1>
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.Products, 'Выберите продукт:', {'label_attr': {'class': 'font-weight-bold'}}) }}
            {{ form_widget(form.Products, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.taxNumber, 'Номер покупателя:', {'label_attr': {'class': 'font-weight-bold'}}) }}
            {{ form_widget(form.taxNumber, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group text-center">
            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
        {{ form_end(form) }}
        {% if result is defined %}
            <div class="card mt-4">
                <div class="card-header font-weight-bold">Результат</div>
                <div class="card-body">
                    <p>Страна покупателя: {{ result.country }}</p>
                    <p>Цена продукта: {{ result.price }}</p>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}